---
import Layout from "../layouts/Layout.astro";
import Menu from "@components/Menu.astro";
import portafolio from "@data/portafolio.json";
const sitio = "https://jlcabrera.site/";
---

<Layout title="Portafolio">
  <Menu path="portafolio" />
  <div>
    <div class="flex flex-col gap-2 mb-3">
      <h1 class="font-black text-2xl">MÃ­ Portafolio</h1>
      <div class="h-[5px] w-[50px] bg-primary rounded"></div>
    </div>
    <div class="flex flex-wrap gap-5 justify-evenly">
      {
        portafolio.map((p) => (
          <div class="mb-3 bg-base-100 p-2 rounded w-full xl:max-w-[300px]">
            <h3 class="text-xl font-bold mb-3">{p.titulo}</h3>
            <div class="w-3/4 aspect-[6/4] mx-auto flex justify-center content-center mb-3">
              <label class="swap swap-rotater m-auto h-full w-full">
                <input type="checkbox" />
                <div class="swap-on w-full h-full">
                  <img
                    src={sitio + p.logo}
                    alt={p.titulo}
                    class="w-full h-full object-contain rounded"
                  />
                </div>
                <div class="swap-off w-full h-full">
                  <img
                    src={sitio + p.imagen}
                    alt={p.titulo}
                    class="w-full h-full object-contain rounded"
                  />
                </div>
              </label>
            </div>
            <div class="mb-3">
              <p>{p.texto}</p>
            </div>
            <div>
              <div class="badge">{p.domicilio}</div>
            </div>
            {/* <hr class="border-primary mt-2 rounded" /> */}
          </div>
        ))
      }
    </div>
  </div>
  <div></div>
</Layout>
