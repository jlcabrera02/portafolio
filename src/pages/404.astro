---
import Layout from "../layouts/Layout.astro";
import Menu from "@components/Menu.astro";
import iconNotF from "@assets/img/search.svg";
---

<Layout title="Sobre mí">
  <Menu path="404" />
  <div class="h-full w-full flex justify-center items-center">
    <div>
      <h3
        class="md:text-4xl text-2xl font-bold mb-3 text-center text-secondary drop-shadow-[0_0px_20px_oklch(var(--s))]"
      >
        Página no encontrada :(
      </h3>
      <img
        src={iconNotF.src}
        alt="not_found"
        class="w-1/3 mx-auto drop-shadow-[0_0px_50px_oklch(var(--s))]"
      />
    </div>
  </div>
</Layout>
